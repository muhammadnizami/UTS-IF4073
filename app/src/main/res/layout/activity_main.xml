<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="nizami_13512501.UTS.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ambil Gambar"
        android:id="@+id/buttonAmbilGambar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView"
        android:layout_above="@+id/buttonAmbilGambar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Processing"
        android:id="@+id/textViewProcessing"
        android:visibility="invisible"
        android:onClick="onButtonTerapkanMatriksKonvolusiClick"
        android:layout_alignTop="@+id/buttonAmbilGambar"
        android:layout_toEndOf="@+id/buttonAmbilGambar" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deteksi Gambar"
        android:id="@+id/buttonDeteksiGambar"
        android:layout_below="@+id/textViewProcessing"
        android:layout_toEndOf="@+id/buttonAmbilGambar"
        android:onClick="onButtonDeteksiGambarClicked" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Noise Removal"
        android:id="@+id/checkBoxNoiseRemoval"
        android:layout_alignParentStart="true"
        android:checked="false"
        android:layout_above="@+id/buttonAmbilGambar" />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skeletonize"
        android:id="@+id/checkBoxSkeletonize"
        android:layout_alignParentStart="true"
        android:checked="false"
        android:layout_above="@+id/checkBoxNoiseRemoval" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="smooth"
        android:id="@+id/checkBoxSmooth"
        android:layout_above="@+id/checkBoxSkeletonize"
        android:layout_alignParentStart="true"
        android:checked="false" />

</RelativeLayout>
